@using Xomorod.Helper.Resources
@model Xomorod.Com.Models.VerifyPhoneNumberViewModel
@{
    ViewBag.Title = $"{Localization.VerifyPhoneNumber}";
}

<br /><br />
<h1>@ViewBag.Title</h1><br /><br />

<div style="padding: 20px;">
    @using (Html.BeginForm("VerifyPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("phoneNumber", @Model.PhoneNumber)
        <h4>@Localization.Enter_verification_code</h4>
        <h5>@ViewBag.Status</h5>
        <hr />
        <div class="centered minForms">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group" dir="ltr">
                        <span class="input-group-addon"><i class="fa fa-code fa-fw"></i></span>
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control wp-caption-text", @placeholder = Localization.Code, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.Code) })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" class="btn btn-default" value="@Localization.Submit" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}