@using Xomorod.Helper.Resources
@model Xomorod.Com.Models.RegisterViewModel
@{
    ViewBag.Title = $"{Localization.Register}";
}

<br /><br />
<h1>@ViewBag.Title</h1><br /><br />

<div style="padding: 20px;">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>@Localization.Create_a_new_account</h4>
        <hr />
        <div class="centered minForms">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group" dir="ltr">
                        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control wp-caption-text", @placeholder = Localization.Username, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.Username) })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group" dir="ltr">
                        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control wp-caption-text", @placeholder = Localization.EmailAddress, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.EmailAddress) })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group" dir="ltr">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control wp-caption-text", @placeholder = Localization.Password, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.Password) })
                    </div>                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group" dir="ltr">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control wp-caption-text", @placeholder = Localization.ConfirmPassword, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.ConfirmPassword) })
                    </div>                    
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" class="btn btn-default" value="@Localization.Register" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
