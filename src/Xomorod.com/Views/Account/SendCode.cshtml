@using Xomorod.Helper.Resources
@model Xomorod.Com.Models.SendCodeViewModel
@{
    ViewBag.Title = $"{Localization.Send}";
}

<br /><br />
<h1>@ViewBag.Title</h1>

<div style="padding: 20px;">
    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>@Localization.Send_verification_code</h4>
        <hr />
        <div class="centered minForms">
            <div class="row">
                <div class="col-md-8">
                    @Localization.Select_Two_Factor_Authentications:
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                    <input type="submit" value="@Localization.Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>