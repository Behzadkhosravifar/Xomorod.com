@using Xomorod.Helper.Resources
@model Xomorod.Com.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = $"{Localization.Forgot_your_password}";
}

<br /><br />
<h1>@ViewBag.Title</h1>

<div style="padding: 20px;">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>@Localization.Enter_your_email</h4>
        <hr />
        <div class="centered minForms">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group" dir="ltr">
                        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control wp-caption-text", @placeholder = Localization.EmailAddress, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.EmailAddress) })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" class="btn btn-default" value="@Localization.EmailLink" />
                </div>
            </div>
        </div>
    }
</div>