@using Xomorod.Helper.Resources
@using Xomorod.Shared
@model Xomorod.Com.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = Localization.Register;
}
<br />
<br />
<h2>@ViewBag.Title</h2>
<br />
<h3>@string.Format(Localization.AssociateYourAccount, Localization.ResourceManager.GetString(ViewBag.LoginProvider))</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@Localization.AssociationForm</h4>
    <hr />
    <div class="centered minForms">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-info">
            @Html.Raw(string.Format(Localization.SuccessfullyAuthenticatedWithLoginProvider, 
                Localization.ResourceManager.GetString(ViewBag.LoginProvider), Localization.Register))
        </p>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
                <div class="input-group" dir="ltr">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control wp-caption-text", @placeholder = Localization.Username, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.Username) })
                </div>
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
                <div class="input-group" dir="ltr">
                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control wp-caption-text", @placeholder = Localization.EmailAddress, @data_val_required = string.Format(Localization.The_0_field_is_required, Localization.EmailAddress) })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-default" value="@Localization.Register" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
